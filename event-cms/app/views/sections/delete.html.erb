<% @page_title = "Delete Section" %>
<%= link_to("<< Back to List", {:action => 'index', :event_id => params[:event_id]}, :class => 'back-link') %>

<div class="sections delete">
  <h2>Delete Section</h2>

  <%= form_for(:section, :url => {:action => 'destroy', :id => @section.id}) do |f| %>

    <p>Are you sure you want to permanently delete this section?</p>

    <p class="reference-name"><%= @section.title %></p>

    <div class="form-buttons">
      <%= submit_tag("Delete Section") %>
    </div>

  <% end %>
</div>
