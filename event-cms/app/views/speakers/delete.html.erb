<% @page_title = "Delete Speaker" %>
<%= link_to("<< Back to List", {:action => 'index', :event_id => params[:event_id]}, :class => 'back-link') %>

<div class="speakers delete">
  <h2>Delete Speaker</h2>

  <%= form_for(:speaker, :url => {:action => 'destroy', :id => @speaker.id}) do |f| %>

    <p>Are you sure you want to permanently delete this speaker?</p>

    <p class="reference-name"><%= @speaker.name %></p>

    <div class="form-buttons">
      <%= submit_tag("Delete Speaker") %>
    </div>

  <% end %>
</div>
